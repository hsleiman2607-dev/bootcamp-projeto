// 1. Configuração do Gerador
generator client {
  provider = "prisma-client-js"
}

// 2. Configuração da Fonte de Dados
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 3. Modelo de Categoria
model Categoria {
  CatID   Int      @id @default(autoincrement())
  CatNome String?  @db.VarChar(255)
  pessoas Pessoa[]
  ofertas Oferta[] // Relacionamento com as ofertas desta categoria

  @@map("categorias")
}

// 4. Modelo de Pessoa
model Pessoa {
  PesID         Int       @id @default(autoincrement())
  nome_completo String    @db.VarChar(255)
  email         String    @unique @db.VarChar(255)
  telefone      String?   @db.VarChar(20)
  descricao     String?   @db.Text
  CatID         Int
  categoria     Categoria @relation(fields: [CatID], references: [CatID])
  ofertas       Oferta[]  // Relacionamento com as ofertas que esta pessoa criou

  @@map("pessoas")
}

// 5. Modelo de Oferta (O coração da problemática)
model Oferta {
  id           Int       @id @default(autoincrement())
  titulo       String    @db.VarChar(255)
  descricao    String?   @db.Text
  nivel        String?   @db.VarChar(50)
  
  // Chaves Estrangeiras
  categoria_ID Int
  categoria    Categoria @relation(fields: [categoria_ID], references: [CatID])
  
  pessoa_ID    Int
  pessoa       Pessoa    @relation(fields: [pessoa_ID], references: [PesID])

  @@map("ofertas")
}